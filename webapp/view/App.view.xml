<mvc:View controllerName="sap.ui.demo.walkthrough/controller.App" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="true">

    <Shell>
    <App>
        <pages>
            <Page title="{i18n>homePageTitle}">
                <content>
                    
                    <Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto">
                        <Button text="{i18n>showHelloText}" press=".onShowHello" class="sapUiMediumMarginEnd" />
                        <content>
                            <Input value="{/recipient/name}" description="Hello {/recipient/name}" valueLiveUpdate="true" width="60%" class="sapUiMediumMarginEnd" />
                            <Text text="Hello {/recipient/name}" class="sapUiSmallMargin"/>
                        </content>
                    </Panel>
                </content>
            </Page>
        </pages>
    </App>
    </Shell>
</mvc:View>